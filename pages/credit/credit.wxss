/* pages/credit/credit.wxss */
page{
  height: 100%;
}
page>view{
  height: 100%;
}
.pic_box{
  position: relative;
  height: 430rpx;
  background-color: red;
}
.col_hui{
  font-size: 24rpx;
}
/*背景*/
.pic_box>image{
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.pic_box_content{
  display: flex;
  flex-direction:column;
  justify-content:center;
  align-content:center;
  align-items:center;
  width: 100%;
  height: 100%;
}
.pic_box_content>image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  box-shadow: 0px 0px 0px 10rpx rgba(148, 170, 255, .9);
  margin-bottom: 6rpx;
}
.pic_box_content>text{
  margin: 10rpx 0 0;
  color: #fff; 
}
.credit_body{
  height: 93%;
}
.credit_body>.bodyTag{
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-top:5rpx solid #f7f8ff;
  border-bottom:5rpx solid #f7f8ff;
  z-index: 100;
}
.Tag_edge{
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 80rpx;
}
.Tag_edge>text{
  display: inline-block;
  width: 35%;
  height: 85%;
  color: #999;
}
.Tag_edge>.userLi_actived{
  color: #333;
  border-bottom: 6rpx solid #5e75ff;
} 
.tab-content{
  height: 100%;
}
.scoll-h{
  height: 100%;
}
/*发起信息*/
.fq_pjr_leader{
  height: 150rpx;
  width: 95%;
  margin: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f7f8ff;
}
.fq_pjr_leader>view{
  width: 47%;
}
.fq_pjr_leader>view:first-child>image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.fq_pjr_leader>view:first-child>view{
  width: 55%;
  vertical-align: middle;
}
.fq_pjr_leader>view:last-child{
  width: 47%;
  display: inline-flex;
  flex-direction:column;
}
.fq_pjr_leader>view:last-child>view{
  text-align: right;
}
.fq_pjr_leader>view:last-child>view>view{
  width: 100%;
  height: 100%;
}
/*参与信息*/
.fq_pjr_ul{
  margin: 20rpx;
}
.fq_pjr_li>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.fq_pjr_li>view{
  display: inline-flex;
  flex-direction:column;
}
.fq_pjr_li>view>text{
  margin-top: 15rpx;
  font-size: 24rpx;
}
.fq_pjr_li>view>view>text.col_hui{
  font-size: 24rpx;
}
.fq_pjr_li>view>view>text{
  margin-right: 10rpx;
}
.fq_pjr_li>view>view>.pj_aix{  
  height: 23rpx;  
  width: 26rpx;  
  display: inline-block;
  vertical-align: middle;
  margin-right: 5rpx;
}
.fq_cypj_li{
  width: 100%;
  height: 70rpx;
}
.fq_cypj_li>text{
  width: 570rpx;
  height: 50rpx;
  float: right;
  margin-right: 20rpx;
  padding-left: 20rpx;
  line-height: 50rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f7f8ff;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
}
