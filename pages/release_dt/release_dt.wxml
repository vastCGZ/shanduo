<!-- release_dt.wxml -->
<view class='container'>
  <view class='release_header'>
    <text class='left_text inline' bindtap='cancel'>取消</text>
    <text class='center_text inline'>动态发布</text>
    <text class='right_text inline' bindtap='launchDynamic'>发送</text>
  </view>
  <view class='release_section'>
    <textarea placeholder='说说你觉得有趣的事吧!' placeholder-class="psection" bindinput='inputContent'></textarea>
  </view>
  <view class='release_footer pos_rel'>
    <block wx:for="{{avatarUrl}}" wx:key="navItems" wx:for-item="item" wx:for-index="idx">
      <image class='release_footer_pic' src="{{item}}"></image>
    </block>
    <view class='pic_left' bindtap="bindViewTap">
      <image src='/image/icon/bitmap_1.png'></image>
    </view>
    <view class='pic_right pos_abs'>
      <image src='/image/icon/location.png'></image>
      <text>长沙五一广场</text>
    </view>
  </view>
  <view class='footer_IM'>
    <image src='/image/icon/copy_2_1.png'></image>
    <image src='/image/icon/copy_6_1.png'></image>
    <image src='/image/icon/copy_4_1.png'></image>
  </view>
  <view class='footer_di'>
    <image src='/image/icon/laugh_1.png'></image>
    <image src='/image/icon/laugh_6.png'></image>
    <image src='/image/icon/laugh_4.png'></image>
    <image src='/image/icon/laugh_8.png'></image>
  </view>
</view>