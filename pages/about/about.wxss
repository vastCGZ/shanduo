/* pages/about/about.wxss */
page {
  height: 100%;
}

.container {
  align-items: stretch;
}

.bg_body {
  background-color: #f7f8ff;
  height: 100%;
}

.bg_body>view {
  background-color: #fff;
  padding-left: 30rpx;
}

.information{
  display: flex;
  height: 180rpx;
  margin-top: 2px;
}
.information>view{
  display: flex;
  align-items:center;
  margin-left: 20rpx;
}
.information>view:last-child{
  flex-direction:column;
  align-items:flex-start;
  justify-content:center;
}
.information>view>image{
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid #405CFF;
  border-radius: 20rpx;
}
.information>view>text{
  font-size: 32rpx;
  color: #999;
}
.information>view>text:first-child{
  font-size: 36rpx;
  color: #333;
}

.nav {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  height: 100rpx;
  margin-top: 5px;
}

.nav>view {
  display: flex;
  width: 50%;
  line-height: 100%;
  align-self: center;
}
.nav>.nav_left{
  height: 100%;
}
.nav>.nav_left>view {
  align-self: center;
}

.nav>.nav_left>view>text {
  font-size: 36rpx;
  color: #333;
}

/*靠右*/

.nav>.nav_right {
  justify-content: flex-end;
  align-self: center;
}

.nav>.nav_right>image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.level, .sex{
  width: 70rpx;
}