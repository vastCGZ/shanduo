/*app.wxss*/

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

view {
  font-size: 28rpx;
}

swiper {
  height: 100%;
}

text {
  color: #333;
}

.sex, .level {
  display: inline-block;
  background-color: #f5c724;
  color: #fff;
  font-size: 22rpx;
  padding: 0 10rpx;
  border-radius: 50rpx;
  text-align: center;
}

.sex {
  background-color: #ff676f;
  margin-right: 10rpx;
}

.sex_on {
  background-color: #ff676f;
  color: #fff;
  margin-right: 5rpx;
}

.flo_left {
  float: left;
}

.flo_right {
  float: right;
}

.cl_both {
  clear: both;
}

.pos_rel{
  position: relative;
}
.pos_abs{
  position: absolute;
}
.inline {
  display: inline-block;
}

.block {
  display: block;
}

.believe {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.believe>view {
  display: flex;
  width: 50%;
  line-height: 100%;
  align-self: center;
}

.believe>.believe_left>view {
  align-self: center;
}

/*头像*/

.believe>.believe_left>image {
  border-radius: 50%;
  margin-right: 20rpx;
  width: 100rpx;
  height: 100rpx;
}

/*距离右靠*/

.believe>.believe_right {
  justify-content: flex-end;
  align-self: center;
}

/*右靠*/

.believe>.believe_right>text {
  margin-right: 20rpx;
}

/*login/register*/

form {
  height: 100%;
  width: 100%;
}

/*页眉*/

.header {
  width: 100%;
  height: 80rpx;
}

/*.header里所有view*/

.header>view {
  display: inline-block;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
}

.header>view>image {
  vertical-align: middle;
}

/*页眉里的左边的view*/

.header_left {
  text-align: left;
}

/*关闭图片*/

.header_left>image {
  padding-left: 30rpx;
}

/*页面主体*/

.article {
  width: 100%;
  height: 300rpx;
  text-align: center;
  line-height: 450rpx;
}

/*头像*/

.article>image {
  width: 172rpx;
  height: 172rpx;
}

/*页脚*/

.footer {
  width: 100%;
  text-align: center;
}

/*.footer里所有view*/

.footer>view {
  width: 95%;
  margin-bottom: 30rpx;
}

/*密码*/

.footer>.footer_pwd {
  margin: 0;
}

/*input前面的图片*/

.footer>view>image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}

/*input在一行内*/

.footer>view>view {
  display: inline-block;
}

/*.footer里所有view里所有view里所有input*/

.footer>view>view>input {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  border: 1rpx solid rgba(227, 124, 128, 0.3);
  border-radius: 30rpx;
  text-align: left;
  display: inline-block;
  box-shadow: 0 0 10rpx rgba(227, 124, 128, 0.3) inset;
}

/*input提示文字*/

.psection {
  color: #999;
  font-size: 20rpx;
}

.footer>.footer_text {
  margin: 0 0 60rpx;
}

/*登录注册*/

.footer>.footer_button {
  width: 100%;
}

/*立即登录注册按钮*/

.footer>.footer_button>button {
  border-radius: 30rpx;
  width: 58%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}

/*底部风景图*/

.bottom_img {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 343rpx;
}

/*底部风景图里的所有的image*/

.bottom_img>image {
  width: 100%;
  height: 100%;
}
/*发布*/
page{
  height: 100%;
}
.release_header{
  background-color: #ffffff;
  height:100rpx;
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
  border-bottom: 2rpx solid #eaeaea;

}
.release_header>text{
  width: 20%;
}
.release_header>.left_text{
  text-align: left;
  padding-left: 5%;
  color: #999999;
}
.release_header>.center_text{
  width: 60%;
  text-align: center;
  color: #333333;
  font-size: 32rpx;
}
.release_header>.right_text{
  text-align: right;
  padding-right: 5%;
  color: #4660ff;
}
.release_section{
  background-color: #ffffff;
  width: 100%;
}