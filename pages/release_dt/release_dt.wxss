.container{
  display: block;
  background-color: #eaeaea;
}
.release_section>textarea{
  padding: 30rpx;
  width: 92%;
}
.psection{
  color: #999999;
  font-size: 32rpx;
}
.release_footer{
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background-color: #ffffff;
  width:100%;
  padding-bottom: 30rpx; 
}
.release_footer>view{
  display: inline-block;
}

.release_footer_pic{
  width: 250rpx;
  height: 250rpx;
  border-radius: 20rpx;
  vertical-align: bottom;
  margin-left:30rpx;
}
.release_footer>.pic_left{
  margin-left:30rpx;
  background-color: #eaeaea;
  border-radius: 20rpx;
  width: 250rpx;
  height: 250rpx;
  text-align: center;
  line-height: 250rpx;
}
.release_footer>.pic_left>text{
  font-size: 24rpx;
  color: #999999;
}
.release_footer>.pic_left>view{
  display: block;
  width: 60rpx;
  height: 30rpx;
  margin: 0 auto;
}
.release_footer>.pic_left>view>image{
  width: 60rpx;
  height: 48rpx;
}
.release_footer>.pic_center{
  bottom: 30rpx;
  right: 100rpx;
}
.release_footer>.pic_center>image{
  width: 44rpx;
  height: 44rpx;
}
.release_footer>.pic_right{
  bottom: 30rpx;
  right: 30rpx;
}
.release_footer>.pic_right>image{
  text-align: right;
  width: 48rpx;
  height: 48rpx;
}