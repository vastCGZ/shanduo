    </swiper-item>
  </swiper>
  <swiper wx:if="{{currentTab1 == 0 && currentTab == 1}}" current="{{currentTab}}" class="swiper-box" duration="300" bindchange="bindChange" style='height:{{430+455*length}}rpx'>
