/*register.wxss*/

form {
  height: 100%;
  width: 100%;
}

/*页眉*/

.header {
  width: 100%;
  height: 80rpx;
}

/*.header里所有view*/

.header>view {
  display: inline-block;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
}

/*.header里所有view里所有image*/

.header>view>image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

/*页眉里的左边的view*/

.header_left {
  text-align: left;
}

/*返回图片*/

.header_left>image {
  padding-left: 30rpx;
}


/*页面主体*/

.article {
  width: 100%;
  height: 300rpx;
  text-align: center;
  line-height: 450rpx;
}

/*头像*/

.article>image {
  width: 172rpx;
  height: 172rpx;
}

/*页脚*/

.footer {
  width: 100%;
  text-align: center;
}

/*.footer里所有view*/

.footer>view {
  width: 95%;
  margin-bottom: 30rpx;
}

/*密码*/

.footer>.footer_pwd {
  margin: 0;
}

/*input前面的图片*/

.footer>view>image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}

/*用户名*/
.footer>.footer_name>view{
  position: relative;
}
.footer>.footer_name>view>button {
  position: absolute;
  top: 8rpx;
  right: -24rpx;
  z-index: 100;
  border-radius: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 40rpx;
  font-size: 20rpx;
  padding: 0 10rpx;
}
/*input在一行内*/

.footer>view>view {
  display: inline-block;
}

/*.footer里所有view里所有view里所有input*/

.footer>view>view>input {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  border: 1rpx solid rgba(227, 124, 128, 0.3);
  border-radius: 30rpx;
  text-align: left;
  display: inline-block;
  box-shadow: 0 0 10rpx rgba(227, 124, 128, 0.3) inset;
  vertical-align: middle;
}

/*input提示文字*/

.psection {
  color: #999;
  font-size: 20rpx;
}

/*协议*/

.footer>.footer_text {
  margin: 0 0 60rpx;
}

/*协议里的文字*/

.footer>.footer_text>label{
  color: #999999;
  font-size: 20rpx;
}

/*  重写 radio 样式  */
/* 未选中的 背景样式 */
.footer>.footer_text>label>radio .wx-radio-input{
   width: 30rpx;
   height: 30rpx;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
.footer>.footer_text>label>radio .wx-radio-input.wx-radio-input-checked::before{
   width: 30rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   height: 30rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 30rpx;
   font-size:30rpx; /* 对勾大小 30rpx */
}



.footer>.footer_text>label>text {
  color: #e37c80;
}

/*立即注册*/

.footer>.footer_button {
  width: 100%;
}

/*立即注册按钮*/

.footer>.footer_button>button {
  border-radius: 30rpx;
  width: 58%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}

/*底部风景图*/

.bottom_img {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 343rpx;
}

/*底部风景图里的所有的image*/

.bottom_img>image {
  width: 100%;
  height: 100%;
}
