page {
  height: 100%;
}

.container {
  align-items: stretch;
}

.bg_body {
  background-color: #fff;
  height: 100%;
}

.bg_body>view {
  background-color: #fff;
  padding-left: 30rpx;
}
/*个人信息*/
.bg_body>.pic_box{
  position: relative;
  height: 460rpx;
  padding: 0;
  background-color: transparent;
  z-index: 1;
}
/*背景*/
.pic_box>image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.pic_box_content{
  display: flex;
  flex-direction:column;
  /* justify-content:center;
  align-items:center; */
  align-content:center;
  background-color: transparent;
  width: 100%;
  height: 100%;
}
.pic_box_content>view{
  padding-left: 30rpx;
}
.pic_box_content>view:first-child{
  padding-top: 30rpx;
}
/*头像*/
.pic_box_content>view:first-child>image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  box-shadow: 0px 0px 0px 10rpx rgba(255, 255, 255, .6);
}
.pic_box_content>view>view{
  margin-top: 20rpx;
}
/*等级*/
.pic_box_content>view:first-child>view:nth-child(4){
  margin-top: 30rpx;
}
/*名字*/
.pic_box_content>view:first-child>view:nth-child(2)>text{
  font-size: 30rpx;
  font-weight:600;
}
/*性别年龄*/
.pic_box_content>view:first-child>view>text:nth-child(2){
  font-size: 20rpx;
  font-weight:500;
  margin-left: 10rpx;
}
/*闪多号*/
.pic_box_content>view:first-child>text:nth-child(3){
  display: inline-block;
  margin-top: 16rpx;
  font-size: 24rpx;
  font-weight:500;
}
/*好友活动动态*/
.pic_box_content>view:last-child>view{
  margin-right: 40rpx;
}
.text_da{
  font-size: 32rpx;
}
.text_xiao{
  font-size: 20rpx;
  margin-left:10rpx;
}




.nav {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  height: 100rpx;
}

.nav>view {
  display: flex;
  width: 50%;
  line-height: 100%;
  align-self: center;
}

.nav>.nav_left>view {
  align-self: center;
}

.nav>.nav_left>image {
  border-radius: 50%;
  margin-right: 10rpx;
  width: 50rpx;
  height: 50rpx;
}

.nav>.nav_left>view>text {
  color: #333;
}

/*靠右*/

.nav>.nav_right {
  justify-content: flex-end;
  align-self: center;
}

.nav>.nav_right>image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.level, .sex{
  width: 70rpx;
}