/*load.wxss*/

form {
  height: 100%;
  width: 100%;
}

/*页眉*/

.header {
  width: 100%;
  height: 80rpx;
}

/*.header里所有view*/

.header>view {
  display: inline-block;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
}

/*.header里所有view里所有image*/

.header>view>image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

/*页眉里的左边的view*/

.header_left {
  text-align: left;
}

/*关闭图片*/

.header_left>image {
  margin-left: 30rpx;
}

/*页眉里的右边的view*/

.header_right {
  text-align: right;
}

/*去注册文字*/

.header_right>text {
  vertical-align: middle;
  font-size: 30rpx;
  color: #333;
}

/*右箭头图片*/

.header_right>image {
  padding-right: 30rpx;
}

/*页面主体*/

.article {
  width: 100%;
  height: 300rpx;
  text-align: center;
  line-height: 450rpx;
}

/*头像*/

.article>image {
  width: 172rpx;
  height: 172rpx;
}

/*页脚*/

.footer {
  width: 100%;
  text-align: center;
}

/*.footer里所有view*/

.footer>view {
  width: 95%;
  margin-bottom: 30rpx;
}

/*密码*/

.footer>.footer_pwd {
  margin: 0;
}

/*input前面的图片*/

.footer>view>image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}

/*input在一行内*/

.footer>view>view {
  display: inline-block;
}

/*.footer里所有view里所有view里所有input*/

.footer>view>view>input {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  border: 1rpx solid rgba(227, 124, 128, 0.3);
  border-radius: 30rpx;
  text-align: left;
  display: inline-block;
  box-shadow: 0 0 10rpx rgba(227, 124, 128, 0.3) inset;
}

/*input提示文字*/

.psection {
  color: #999;
  font-size: 20rpx;
}

/*注册/找回*/

.footer>.footer_text {
  margin: 0 0 60rpx;
}

/*注册/找回,对半分*/

.footer>.footer_text>view {
  width: 50%;
}

/*注册/找回里的文字*/

.footer>.footer_text>view>text {
  color: #999;
  font-size: 20rpx;
}

/*忘记密码对齐上方的input*/

.footer>.footer_text>.footer_text_left>text {
  margin-left: 48%;
}

/*立即登录*/

.footer>.footer_button {
  width: 100%;
}

/*立即登录按钮*/

.footer>.footer_button>button {
  border-radius: 30rpx;
  width: 56%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}

/*底部风景图*/

.bottom_img {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 343rpx;
}

/*底部风景图里的所有的image*/

.bottom_img>image {
  width: 100%;
  height: 100%;
}
