/*祖容器  */

.container {
  height: 110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
}

.img_special {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
}

/*选项卡动态，活动标题容器*/

.swiper-tab {
  text-align: center;
  /* border: 1rpx solid #777; */
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  /* border-radius: 50rpx; */
}

/*选项卡动态，活动标题元素*/

.swiper-tab-list {
  display: inline-block;
  background-color: #fff;
  /* border-radius: 50rpx; */
  width: 50%;
  color: #999;
  font-size: 32rpx;
  text-decoration: underline;
}

