/* pages/myactivity/myactivity.wxss */
 page{
  width: 100%;
  height: 100%;
}
swiper-item{
  position: static;
}
.container{
  background-color: #f7f8ff;
  width: 100%;
  height: 100%;
}
.level{
  margin-right: 10rpx;
}
.left_text{
  margin-right: 12%;
  width: 50rpx;
  height: 50rpx;
}
.release_header{
  border-bottom:2rpx solid #eaeaea;
}

/*活动分类*/
.myactivity_body{
  width: 100%;
}
.myactivity_body>.bodyTag{
  position: fixed;
  top: 0rpx;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-bottom:2rpx solid #eaeaea;
}
.Tag_edge{
  width: 33%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}
.Tag_edge>text{
  display: inline-block;
  width: 50%;
  height: 85%;
  color: #999;
}
.Tag_edge>.userLi_actived{
  color: #333;
  border-bottom: 6rpx solid #5e75ff;
} 
.tab-content{
  padding-top: 82rpx;
}
.payment, .pwd_payment{
  background-color:rgba(51,51,51,.5);
  width: 100%;
  height: 100%;
  text-align: center;
  position: absolute;
  top: 0;
  left:0;
}
.payment>view{
  margin: 45% auto auto auto ;
  background-color:#fff;
  width: 500rpx;
  height: 500rpx;
  border-radius: 20rpx;
}
.pwd_payment>view{
  margin: 45% auto auto auto ;
  background-color:#fff;
  width: 400rpx;
  height: 320rpx;
  border-radius: 20rpx;
}
.payment_title{
  height: 80rpx;
  background-color:#fff;
  border-bottom: 1rpx solid #f7f8ff;
  line-height: 80rpx;
  vertical-align: middle;
  text-align: left;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.payment_title>image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 29%;
  margin-left: 3%;
}
.details_money>view{
  display: inline-block;
  width: 200rpx;
  text-align: left;
}
.details_da{
  font-size: 65rpx;
  margin-left: 10rpx;
}
.details_xiao{
  font-size: 22rpx;
}
.details_payment{
  margin-top: 15rpx;
}
.details_payment>view{
  display: inline-block;
  width: 200rpx;
  text-align: left;
}
.details_payment>view>image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin: 0 10rpx;
}
.details_payment>view>text{
  vertical-align: middle;
}
.details_upgrade{
  margin-top: 20rpx;
}
.payment_whether{
  margin-top: 30rpx;
}
.payment_whether>button{
  display: inline-block;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  border-radius: 50rpx;
  padding: 0;
  background-color: #fff;
  color: #fff;
  border: 1rpx solid #5e75ff;
}
.payment_whether>.payment_cancel{
  margin-right: 10rpx;
  color: #5e75ff;
}
.payment_whether>.payment_confirm{
  margin-left: 10rpx;
  background-color: #5e75ff;
}
.pwd_payment .payment_whether>button{
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.payment_pwd>view{
    margin-top: 20rpx;  
}
/*6位支付密码*/
.payPass_box_m{  
    margin-top: 20rpx;  
    width: 100%;  
    display: flex;  
    align-items: center;  
    justify-content: center;  
    position: relative;  
}  
.payPass_box_m_in{  
    display: flex;  
    align-items: center;  
    justify-content: center;  
    position: relative;  
    z-index: 10;  
}  
.payPass_box_m_in_in{  
    width: 50rpx;  
    height: 50rpx;  
    border:4rpx #bfbfbf solid;  
    display: flex;  
    justify-content: center;  
    align-items: center;  
    margin-right:8rpx;   
}
.payPass_box_m_in_in:last-child{
    margin-right:0;   
}  
.indexTopInput{  
    position: absolute;  
    height: 100%;  
    background: #000;  
    opacity: 0.5;  
    z-index: 2;  
    left: 0rpx;  
    background: red;  
    left: -150%;  
}  
.indexTopInput input{  
    width: 100%;  
    height: 100%;  
} 