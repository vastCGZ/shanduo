/* pages/information/information.wxss */
.pic_box{
  position: relative;
  height: 430rpx;
  padding: 30rpx 0 0 30rpx;
}
/*背景*/
.pic_box>image{
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.pic_box_content{
  display: flex;
  flex-direction:column;
  /* justify-content:center;
  align-items:center; */
  align-content:center;
  width: 100%;
  height: 100%;
}
.pic_box_content>image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  box-shadow: 0px 0px 0px 10rpx rgba(255, 255, 255, .6);
}
.pic_box_content>view{
  margin-top: 20rpx;
}
.pic_box_content>view:nth-child(4){
  margin-top: 40rpx;
}
.pic_box_content>view:nth-child(5){
  margin-top: 16rpx;
}
.pic_box_content>view:nth-child(2)>text{
  font-size: 30rpx;
  font-weight:600;
}
.pic_box_content>view>text:nth-child(2){
  font-size: 20rpx;
  font-weight:500;
  margin-left: 10rpx;
}
.pic_box_content>text:nth-child(3){
  margin-top: 16rpx;
  font-size: 24rpx;
  font-weight:500;
}
.text_da:nth-child(1){
  margin-left:0;
}
.text_da{
  font-size: 32rpx;
  margin-left:40rpx;
}
.text_xiao{
  font-size: 20rpx;
  margin-left:10rpx;
}
.bodyTag{
  width: 100%;
  background-color: #fff;
  border-bottom: 6rpx solid #f7f8ff;
  z-index: 100;
}
.Tag_edge{
  width: 25%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}
.Tag_edge>text{
  display: inline-block;
  width: 65%;
  height: 85%;
  color: #999;
}
.Tag_edge>.userLi_actived{
  color: #333;
  border-bottom: 6rpx solid #5e75ff;
} 
.tab-content{
  /* margin-top: 182rpx; */
  height: 100%;
}
.scoll-h{
  height: 100%;
}
.activity_block:nth-child(2){
  border-bottom: 0;
}
.activity_block:nth-child(3){
  border-top:2rpx solid #f7f8ff;
  border-bottom:20rpx solid #f7f8ff;
}
.information_footer{
  width: 100%;
  height: 100rpx;
}
.information_footer>view{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
}
.information_footer>view>view{
  display: inline-block;
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}