
.container{
  background-color: #eaeaea;
}
.release_header{
  height: 8.9%;
}
.release_section{
  height: 67%;
}
.release_section>view{
  border-bottom: 1rpx solid #eaeaea;
}
.release_section>view>input{
  padding: 20rpx;
  width: 94%;
}
.release_section>view>textarea{
  padding:20rpx;
  height: 200rpx;
  width: 94%;
}
.psection_ipt{
  color: #999999;
  font-size: 28rpx;
}
.psection_text{
  color: #999999;
  font-size: 28rpx;
}
/*人数*/
.people>picker{
  padding: 20rpx;
  width: 20%;
}
.people view>image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}
.people view>text{
  color: #999999;
  margin-right: 5rpx;
  vertical-align: middle;
}
/*活动时间*/
.time>image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}
.time>text{
  vertical-align: middle;
}
.time{
  padding: 20rpx;
}
.time>picker{
  float: right;
}
.time view>text{
  color: #999999;
  margin-right: 5rpx;
  vertical-align: middle;
}
.time view>image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
/*详细地址*/
.release_section>.address{
  border-bottom:8rpx solid #eaeaea;
}
.release_section>.address>textarea{
  height: 80rpx;
}
.psection_address{
  font-size: 28rpx;
}

/*底部*/

.release_footer{
  height: 24%;
  background-color: #fff;
  text-align: center;
}
.release_footer>view{
  display: inline-block;
  background-color: #4455de;
  padding: 10rpx 30rpx 10rpx 30rpx;
  border-radius: 50rpx;
  margin-top: 12%;
}
.release_footer>view:nth-child(1){
  margin-right: 30rpx;
}
.release_footer>view:nth-child(2){
  margin-left: 30rpx;
}
.release_footer>view>text{
  color: #fff;
}