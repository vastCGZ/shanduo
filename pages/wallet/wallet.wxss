/* pages/wallet/wallet.wxss */
page{
  background-color: #f7f8ff;
}
.wallet_block_ul{
  display: flex;
  width: 100%;
  height: 50%;
  flex-wrap:wrap;
}
.wallet_block_li{
  width: 49.7%;
  height: 50%;
  display: flex;
  justify-content:center;
  align-items:center;
  flex-direction: column;
  background-color: #fff;
  border-top: 5rpx solid #f7f8ff;
}
.wallet_block_li:nth-child(odd){
  border-right: 5rpx solid #f7f8ff;
}
.wallet_block_li>.col_lan{
  font-size: 60rpx;
}
.wallet_block_li>image{
  width: 64rpx;
  height: 64rpx;
}