/* pages/vipcore/vipcore.wxss */
page{
  width: 100%;
  height: 100%;
}
.vipcore_header {
  width: 100%;
  background-color: transparent;
}
.vipcore_header>view {
  width: 100%;
  background-color: transparent;
  padding-left: 30rpx;
}
.believe {
  width: 100%;
  height: 260rpx;
  margin-top: 10rpx;
  background-color: transparent;
  z-index: 10;
}

.believe>.believe_left>image {
  width: 150rpx;
  height: 150rpx;
}

.believe>.believe_right>view {
  color: #fefefe;
  font-size: 22rpx;
  margin-right: 50rpx;
  border-radius: 25rpx;
  padding: 8rpx 20rpx 8rpx 20rpx;
  background-color: #4660ff;
}
.believe>.believe_right>view>text {
  color: #fefefe;
  vertical-align: middle;
}
.vip_hea_bg{
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 11;
}